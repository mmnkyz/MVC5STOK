<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Admin/YeniAdmin">
                <div class="modal-body">
                    <label>
                        Kullanıcı Adı
                    </label>
                    @Html.TextBoxFor(m => m.KullaniciAD, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.KullaniciAD, "", new { @style="color:Red; font-size:12px"})
                    <br />
                    <label>
                        Şifre
                    </label>
                    @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=>m.Sifre, "", new { @style="color:Red; font-size:12px"})
                    <br />
                    <button type="submit" class="btn btn-info">Kaydet</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                </div>
            </form>
        </div>
    </div>
</div>