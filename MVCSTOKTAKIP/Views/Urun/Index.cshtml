@using MVCSTOKTAKIP.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_Urunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>ÜRÜNLER LİSTESİ</h2>
    <a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ÜRÜN ID</th>
                <th>ÜRÜN AD</th>
                <th>MARKA</th>
                <th>STOK</th>
                <th>ALIŞ FİYATI</th>
                <th>SATIŞ FİYATI</th>
                <th>KATEGORİ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.UrunID</td>
                    <td>@x.UrunAD</td>
                    <td>@x.TBL_Marka.MarkaAD</td>
                    <td>@x.STOK</td>
                    <td>@x.ALISF</td>
                    <td>@x.SATISF</td>
                    <td>@x.TBL_Kategori.KategoriAD</td>
                    <td>
                        <a href="/Urun/UrunSil/@x.UrunID" class="btn btn-danger">Sil</a>
                        <a href="/Urun/UrunGetir/@x.UrunID" class="btn btn-info">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, Sayfa => Url.Action("Index", new { Sayfa }))

</div>