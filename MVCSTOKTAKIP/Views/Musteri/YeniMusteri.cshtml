@model MVCSTOKTAKIP.Models.Entity.TBL_Musteri
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <form method="post">
        <h2>YENİ MÜŞTERİ EKLEME</h2>
        <div class="form-group">
            <label>MÜŞTERİ AD</label>
            @Html.TextBoxFor(m => m.MusteriAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.MusteriAD, "", new { @style="color:Red; font-size:12px"})
        </div>
        <div class="form-group">
            <label>MÜŞTERİ SOYAD</label>
            @Html.TextBoxFor(m => m.MusteriSOYAD, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MusteriSOYAD, "", new { @style = "color:Red; font-size:12px" })
        </div>
        <div class="form-group">
            <label>ŞEHİR</label>
            @Html.TextBoxFor(m => m.Sehir, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Sehir, "", new { @style = "color:Red; font-size:12px" })
        </div>
        <div class="form-group">
            <label>BAKİYE</label>
            @Html.TextBoxFor(m => m.Bakiye, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m=>m.MusteriID)
        <button type="submit" class="btn btn-default">Müşteri Ekle</button>

    </form>
