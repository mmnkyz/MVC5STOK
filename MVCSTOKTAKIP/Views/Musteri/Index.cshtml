@using MVCSTOKTAKIP.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_Musteri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>MÜŞTERİ LİSTESİ</h2>
    <a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Müşteri Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>MÜŞTERİ ID</th>
                <th>MÜŞTERİ AD</th>
                <th>MÜŞTERİ SOYAD</th>
                <th>ŞEHİR</th>
                <th>BAKİYE</th>
                <th>İŞLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.MusteriID</td>
                    <td>@x.MusteriAD</td>
                    <td>@x.MusteriSOYAD</td>
                    <td>@x.Sehir</td>
                    <td>@x.Bakiye</td>
                    <td>
                        <a href="/Musteri/MusteriSil/@x.MusteriID" class="btn btn-danger">Sil</a>
                        <a href="/Musteri/MusteriGetir/@x.MusteriID" class="btn btn-info">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, Sayfa => Url.Action("Index", new { Sayfa }))
</div>