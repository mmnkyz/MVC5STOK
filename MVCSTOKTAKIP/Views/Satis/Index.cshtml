@using MVCSTOKTAKIP.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBL_Satis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>SATIŞ LİSTESİ</h2>
    <a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>SATIŞ ID</th>
                <th>ÜRÜN</th>
                <th>PERSONEL</th>
                <th>MÜŞTERİ</th>
                <th>FİYAT</th>
                <th>TARİH</th>
                <th>İŞLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.SatisID</td>
                    <td>@x.TBL_Urunler.UrunAD</td>
                    <td>@x.TBL_Personel.PersonelAD @x.TBL_Personel.PersonelSOYAD</td>
                    <td>@x.TBL_Musteri.MusteriAD @x.TBL_Musteri.MusteriSOYAD</td>
                    <td>@x.Fiyat</td>
                    <td>@x.Tarih</td>
                    <td>
                        <a href="/Satis/Sil/@x.SatisID" class="btn btn-danger">Sil</a>
                        <a href="/Satis/SatisGetir/@x.SatisID" class="btn btn-info">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, Sayfa => Url.Action("Index", new { Sayfa }))

</div>