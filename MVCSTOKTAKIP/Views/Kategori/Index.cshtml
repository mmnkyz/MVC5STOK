@using MVCSTOKTAKIP.Models.Entity
@model List<TBL_Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div class="container">
        <h2>KATEGORİ LİSTESİ</h2>
        <a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni Kategori Ekle</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>KATEGORİ ID</th>
                    <th>KATEGORİ AD</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@x.KategoriID</td>
                        <td>@x.KategoriAD</td>
                        <td>
                            <a href="/Kategori/Sil/@x.KategoriID" class="btn btn-danger">Sil</a>
                            <a href="/Kategori/KategoriGetir/@x.KategoriID" class="btn btn-info">Güncelle</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>