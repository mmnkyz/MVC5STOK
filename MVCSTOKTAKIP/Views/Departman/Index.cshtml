@using MVCSTOKTAKIP.Models.Entity
@model List<TBL_Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>DEPARTMAN LİSTESİ</h2>
    <a href="/Departman/Yenidepartman" class="btn btn-primary">Yeni Departman Ekle</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>DEPARTMAN ID</th>
                <th>DEPARTMAN AD</th>
                <th>İŞLEMLER</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.DepartmanID</td>
                    <td>@x.DepartmanAD</td>
                    <td><a href="/Departman/Sil/@x.DepartmanID" class="btn btn-danger">Sil</a>
                    <a href="/Departman/DepartmanGetir/@x.DepartmanID" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>